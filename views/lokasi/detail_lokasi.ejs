<%- include('../partials/header.ejs') %>

    <main class="main-content">

        <style>
            .letter-spacing-1 {
                letter-spacing: 1px;
            }

            .border-dashed {
                border-style: dashed !important;
                border-color: #dee2e6;
            }

            /* Garis pemisah pada layar besar */
            @media (min-width: 768px) {
                .border-end-md {
                    border-right: 1px solid #dee2e6;
                }
            }
        </style>

        <div class="container-fluid p-4">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold text-dark mb-1">Detail Lokasi Penyimpanan</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 small text-muted">
                            <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item"><a href="/lokasi" class="text-decoration-none">Daftar Lokasi</a>
                            </li>
                            <li class="breadcrumb-item active">Detail #<%= lokasi.id_lokasi %>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="d-flex gap-2">
                    <!-- DESKTOP -->
                    <a href="/lokasi" 
                    class="btn btn-outline-secondary btn-sm d-none d-md-inline-flex align-items-center">
                        <i class="fas fa-arrow-left me-2"></i>Kembali
                    </a>

                    <!-- MOBILE -->
                    <a href="/lokasi" 
                    class="d-inline d-md-none text-secondary fs-4">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-9">

                    <div class="card border-0 shadow rounded-4 overflow-hidden">

                        <div
                            class="card-header bg-white p-4 border-bottom d-flex justify-content-between align-items-center flex-wrap gap-3">
                            <div class="d-flex align-items-center text-primary">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="fas fa-warehouse fa-lg"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0 fw-bold text-dark">Informasi Rak / Ruangan</h5>
                                    <p class="mb-0 text-muted small">ID Sistem: <span class="font-monospace">#<%=
                                                lokasi.id_lokasi %></span></p>
                                </div>
                            </div>

                            <div class="text-end">
                                <span class="d-block text-muted small text-uppercase fw-bold mb-1">Kode Lokasi</span>
                                <span class="fs-4 fw-bold text-dark">
                                    <%= lokasi.kode_lokasi || '-' %>
                                </span>
                            </div>
                        </div>

                        <div class="card-body p-4">
                            <div class="row g-4">

                                <div class="col-md-6 border-end-md">
                                    <h6 class="text-secondary text-uppercase small fw-bold mb-4 letter-spacing-1">
                                        <i class="fas fa-map-marker-alt me-2"></i>Lokasi Fisik
                                    </h6>

                                    <div class="row g-4">
                                        <div class="col-12">
                                            <label class="small text-muted mb-1 d-block">Ruangan</label>
                                            <div class="d-flex align-items-center gap-2">
                                                <i class="fas fa-door-open text-secondary"></i>
                                                <span class="fw-bold text-dark fs-5">
                                                    <%= lokasi.ruangan || '-' %>
                                                </span>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <label class="small text-muted mb-1 d-block">Nomor Rak</label>
                                            <span class="fw-bold text-dark">
                                                <%= lokasi.no_rak || '-' %>
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <label class="small text-muted mb-1 d-block">Nomor Pos</label>
                                            <span class="fw-bold text-dark">
                                                <%= lokasi.no_pos || '-' %>
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <label class="small text-muted mb-1 d-block">Label Baris</label>
                                            <span class="fw-bold text-dark">
                                                <%= lokasi.label_baris || '-' %>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 ps-md-4">
                                    <h6 class="text-secondary text-uppercase small fw-bold mb-4 letter-spacing-1">
                                        <i class="fas fa-chart-pie me-2"></i>Kapasitas & Status
                                    </h6>

                                    <% const kap=Number(lokasi.kapasitas) || 0; const ter=Number(lokasi.terpakai) || 0;
                                        const sisa=kap - ter; const persentase=kap> 0 ? Math.round((ter / kap) * 100) :
                                        0;

                                        let warnaBar = 'bg-success';
                                        let statusText = 'Aman';
                                        if(persentase > 70) { warnaBar = 'bg-warning'; statusText = 'Hampir Penuh'; }
                                        if(persentase > 90) { warnaBar = 'bg-danger'; statusText = 'Penuh'; }
                                        %>

                                        <div class="bg-light p-3 rounded-3 border border-dashed mb-4">
                                            <div class="d-flex justify-content-between align-items-end mb-2">
                                                <span class="fw-bold text-dark fs-2">
                                                    <%= persentase %>%
                                                </span>
                                                <span class="badge <%= warnaBar %> bg-opacity-75">
                                                    <%= statusText %>
                                                </span>
                                            </div>
                                            <div class="progress" style="height: 10px;">
                                                <div class="progress-bar <%= warnaBar %>" role="progressbar"
                                                    style="width: <%= persentase %>%;" aria-valuenow="<%= persentase %>"
                                                    aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            <div class="mt-3 d-flex justify-content-between text-muted small">
                                                <span>Terpakai: <strong>
                                                        <%= ter %>
                                                    </strong></span>
                                                <span>Total Kapasitas: <strong>
                                                        <%= kap %>
                                                    </strong></span>
                                            </div>
                                        </div>

                                        <div class="row g-2 text-center">
                                            <div class="col-6">
                                                <div class="p-2 border rounded bg-white">
                                                    <small class="d-block text-muted mb-1">Sisa Ruang</small>
                                                    <strong class="text-success fs-5">
                                                        <%= sisa %>
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>

                                        <% if(lokasi.notes) { %>
                                            <div class="mt-4">
                                                <label class="small text-muted mb-1 d-block fw-bold">Catatan:</label>
                                                <p
                                                    class="small text-dark mb-0 bg-warning bg-opacity-10 p-2 rounded text-break">
                                                    <%= lokasi.notes %>
                                                </p>
                                            </div>
                                            <% } %>
                                </div>

                            </div>
                        </div>

                        <div class="card-footer bg-light p-4 border-top">
                            <!-- MOBILE: LAST UPDATED DI ATAS -->
                            <div class="d-md-none mb-3">
                                <small class="text-muted d-block">
                                    Status: <span class="badge bg-secondary">Aktif</span>
                                </small>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <!-- DESKTOP -->
                                <small class="text-muted d-none d-md-inline">Status: <span class="badge bg-secondary">Aktif</span></small>

                                 <div class="d-flex gap-2">
                                    <form action="/lokasi/delete/<%= lokasi.id_lokasi %>" method="post"
                                        onsubmit="return confirm('Apakah Anda yakin ingin menghapus lokasi ini? Data arsip yang tersimpan di sini mungkin kehilangan referensi.');"
                                        style="display:inline;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash-alt me-2"></i>Hapus 
                                        </button>
                                    </form>
                                    <a href="/lokasi/edit/<%= lokasi.id_lokasi %>"
                                        class="btn btn-warning btn-sm fw-bold text-dark shadow-sm">
                                        <i class="fas fa-edit me-2"></i>Edit 
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </main>

    <%- include('../partials/footer.ejs') %>