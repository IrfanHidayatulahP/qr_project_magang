<%- include('../partials/header.ejs') %>

<main class="main-content">

    <div id="konten-lokasi">
        <section class="container-fluid">
            
            <div class="desktop-header d-none d-md-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-dark m-0">Lokasi</h3>

                <div class="d-flex gap-2">
                    <a href="/lokasi/create" class="btn btn-primary btn-dashboard">
                        <i class="fas fa-plus me-1"></i> Tambah
                    </a>
                </div>
            </div>

            <% if (typeof error !=='undefined' && error) { %> 
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div> 
            <% } %>
            <% if (typeof success !=='undefined' && success) { %> 
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-check-circle me-2"></i> <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div> 
            <% } %>

            

            <div class="card border-0 shadow-sm" style="border-radius: 12px;">
                <div class="card-body p-4">

                    <!-- SEARCH BOX DESKTOP -->
                     
                    <div class="search-box d-none d-md-block mb-4">
                        <form method="get">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" name="q" class="form-control"
                                    placeholder="Cari ID / Nomor Hak / Lokasi...">
                                <button class="btn btn-primary">Cari</button>
                            </div>
                        </form>
                    </div>

                    <div class="table-responsive d-none d-md-block">
                        <table class="table table-hover align-middle" style="white-space: nowrap;">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px;" class="text-center py-3 text-uppercase small fw-bold">ID</th>
                                    <th style="width: 20%;" class="py-3 text-uppercase small fw-bold">Kode Lokasi</th>
                                    <th style="width: 25%;" class="py-3 text-uppercase small fw-bold">Detail Ruangan</th>
                                    <th style="width: 25%;" class="py-3 text-uppercase small fw-bold">Kapasitas</th>
                                    <th style="width: 120px;" class="text-center py-3 text-uppercase small fw-bold">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (Array.isArray(records) && records.length) { %>
                                    <% records.forEach(function(r) { %>
                                        <tr data-id="<%= r.id_lokasi %>">
                                            
                                            <td class="text-center fw-bold text-secondary">
                                                <%= r.id_lokasi %>
                                            </td>

                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 text-primary p-2 rounded me-3">
                                                        <i class="fas fa-barcode"></i>
                                                    </div>
                                                    <span class="fw-bold text-dark"><%= r.kode_lokasi || '-' %></span>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="fw-semibold text-dark">
                                                        <i class="fas fa-door-open me-2 text-muted"></i><%= r.ruangan || '-' %>
                                                    </span>
                                                    <span class="text-muted small mt-1">
                                                        <i class="fas fa-layer-group me-2 text-muted"></i>Rak: <strong><%= r.no_rak || '-' %></strong>
                                                    </span>
                                                </div>
                                            </td>

                                            <td>
                                                <% 
                                                    const kap = Number(r.kapasitas) || 0;
                                                    const ter = Number(r.terpakai) || 0;
                                                    const persentase = kap > 0 ? Math.round((ter / kap) * 100) : 0;
                                                    let warnaProgress = 'bg-success';
                                                    if(persentase > 70) warnaProgress = 'bg-warning';
                                                    if(persentase > 90) warnaProgress = 'bg-danger';
                                                %>
                                                <div class="d-flex justify-content-between mb-1 small">
                                                    <span class="fw-bold"><%= ter %> / <%= kap %></span>
                                                    <span class="text-muted"><%= persentase %>% Penuh</span>
                                                </div>
                                                <div class="progress" style="height: 6px;">
                                                    <div class="progress-bar <%= warnaProgress %>" role="progressbar" 
                                                         style="width: <%= persentase %>%;" 
                                                         aria-valuenow="<%= persentase %>" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </td>

                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a href="/lokasi/<%= r.id_lokasi %>" 
                                                    class="btn btn-sm btn-info text-white shadow-sm" 
                                                    title="Lihat">
                                                        <i class="fas fa-eye"></i>
                                                    </a>

                                                    <a href="/lokasi/edit/<%= r.id_lokasi %>" 
                                                    class="btn btn-sm btn-warning text-white shadow-sm" 
                                                    title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>

                                                    <form action="/lokasi/delete/<%= r.id_lokasi %>" method="POST" style="display:inline"
                                                        onsubmit="return confirm('Hapus lokasi ini?');">
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-danger shadow-sm" 
                                                                title="Hapus">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <div class="d-flex flex-column align-items-center">
                                                <i class="fas fa-map-marked-alt fa-3x mb-3 text-secondary opacity-50"></i>
                                                <h6 class="fw-bold">Belum ada data lokasi</h6>
                                                <small>Silakan tambah lokasi baru.</small>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- ================= MOBILE CARD LOKASI ================= -->
                    <div class="d-md-none px-2 pb-3">

                        <div class="mobile-header mb-3 px-2">

                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="fw-bold m-0">Lokasi</h5>

                                <div class="d-flex gap-2">
                                    <a href="/lokasi/create" class="btn btn-primary btn-sm">
                                        <i class="fas fa-plus"></i>
                                    </a>

                                    <button id="btn-open-download-mobile"
                                            class="btn btn-success btn-sm"
                                            type="button">
                                        <i class="fas fa-download"></i>
                                    </button>
                                </div>
                            </div>

                        </div>
                        <div class="d-md-none mb-3 px-2">
                            <form method="get" action="/lokasi">
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fas fa-search text-muted"></i>
                                    </span>
                                    <input type="text"
                                        name="q"
                                        class="form-control"
                                        placeholder="Cari kode lokasi / ruangan / rak"
                                        value="<%= (typeof filter_q !== 'undefined') ? filter_q : '' %>">
                                    <button class="btn btn-primary" type="submit">Cari</button>
                                </div>
                            </form>
                        </div>

                        <% if (Array.isArray(records) && records.length) { %>
                            <% records.forEach(r => { 
                                const kap = Number(r.kapasitas) || 0;
                                const ter = Number(r.terpakai) || 0;
                                const persen = kap > 0 ? Math.round((ter / kap) * 100) : 0;
                                let warna = 'bg-success';
                                if (persen > 70) warna = 'bg-warning';
                                if (persen > 90) warna = 'bg-danger';
                            %>

                            <div class="card shadow-sm mb-3 border-0" style="border-radius: 14px;">
                                <div class="card-body">

                                    <!-- KODE LOKASI -->
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="bg-primary bg-opacity-10 text-primary p-2 rounded me-3">
                                            <i class="fas fa-map-marker-alt"></i>
                                        </div>
                                        <div class="fw-bold text-dark fs-6">
                                            <%= r.kode_lokasi || '-' %>
                                        </div>
                                    </div>

                                    <!-- DETAIL RUANGAN -->
                                    <div class="small text-muted mb-3">
                                        <div>
                                            <i class="fas fa-door-open me-1"></i>
                                            <strong>Ruangan:</strong> <%= r.ruangan || '-' %>
                                        </div>
                                        <div>
                                            <i class="fas fa-layer-group me-1"></i>
                                            <strong>Rak:</strong> <%= r.no_rak || '-' %>
                                        </div>
                                    </div>

                                    <!-- KAPASITAS -->
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between small mb-1">
                                            <span class="fw-bold"><%= ter %> / <%= kap %></span>
                                            <span class="text-muted"><%= persen %>% penuh</span>
                                        </div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar <%= warna %>" style="width: <%= persen %>%"></div>
                                        </div>
                                    </div>

                                    <!-- AKSI -->
                                    <div class="d-flex gap-2">
                                        <a href="/lokasi/<%= r.id_lokasi %>" class="btn btn-sm btn-outline-primary w-100">
                                            <i class="fas fa-eye me-1"></i> Detail
                                        </a>
                                        <a href="/lokasi/edit/<%= r.id_lokasi %>" class="btn btn-sm btn-outline-warning w-100">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                    </div>

                                </div>
                            </div>

                            <% }) %>
                        <% } else { %>
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-map-marked-alt fa-3x mb-3 opacity-50"></i>
                                <div class="fw-bold">Belum ada data lokasi</div>
                                <small>Silakan tambah lokasi baru.</small>
                            </div>
                        <% } %>

                    </div>

                </div>
            </div>

            <div id="source-checkboxes" style="display:none;">
                <label><input type="checkbox" name="col" value="id_lokasi" checked> ID</label>
                <label><input type="checkbox" name="col" value="kode_lokasi" checked> Kode Lokasi</label>
                <label><input type="checkbox" name="col" value="ruangan" checked> Ruangan</label>
                <label><input type="checkbox" name="col" value="no_rak" checked> No Rak</label>
                <label><input type="checkbox" name="col" value="kapasitas" checked> Kapasitas</label>
                <label><input type="checkbox" name="col" value="terpakai" checked> Terpakai</label>
            </div>

        </section>
    </div>

</main> 
<%- include('../partials/list_template.ejs', { baseUrl: '/lokasi', contentId: 'konten-lokasi' }) %>
<%- include('../partials/footer.ejs') %>