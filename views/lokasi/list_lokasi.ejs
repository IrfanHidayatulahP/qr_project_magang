<%- include('../partials/header.ejs') %>

<main class="main-content">

    <div id="konten-lokasi">
        <section class="container-fluid">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h3 class="fw-bold text-dark m-0">Daftar Lokasi Penyimpanan</h3>
                    <p class="text-muted small mb-0">Kelola data rak, lemari, dan ruangan arsip.</p>
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-primary shadow-sm" href="/lokasi/create">
                        <i class="fas fa-plus-circle me-1"></i> Tambah Lokasi
                    </a>
                    <button id="btn-open-download" class="btn btn-success shadow-sm" type="button">
                        <i class="fas fa-download me-1"></i> Download
                    </button>
                </div>
            </div>

            <% if (typeof error !=='undefined' && error) { %> 
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div> 
            <% } %>
            <% if (typeof success !=='undefined' && success) { %> 
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-check-circle me-2"></i> <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div> 
            <% } %>

            <div class="card border-0 shadow-sm mb-4" style="border-radius: 12px;">
                <div class="card-body p-3">
                    <form method="get" action="/lokasi" class="mb-0 w-100">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 ps-3">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text" name="q" class="form-control border-start-0 border-end-0 shadow-none" 
                                placeholder="Cari Kode Lokasi, Ruangan, atau Nomor Rak..." 
                                value="<%= (typeof filter_q !== 'undefined') ? filter_q : '' %>" />
                            <button type="submit" class="btn btn-primary px-4 rounded-end">Cari Data</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-0 shadow-sm" style="border-radius: 12px;">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px;" class="text-center py-3 text-uppercase small fw-bold">ID</th>
                                    <th style="width: 20%;" class="py-3 text-uppercase small fw-bold">Kode Lokasi</th>
                                    <th style="width: 25%;" class="py-3 text-uppercase small fw-bold">Detail Ruangan</th>
                                    <th style="width: 25%;" class="py-3 text-uppercase small fw-bold">Kapasitas</th>
                                    <th style="width: 120px;" class="text-center py-3 text-uppercase small fw-bold">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (Array.isArray(records) && records.length) { %>
                                    <% records.forEach(function(r) { %>
                                        <tr data-id="<%= r.id_lokasi %>">
                                            
                                            <td class="text-center fw-bold text-secondary">
                                                <%= r.id_lokasi %>
                                            </td>

                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 text-primary p-2 rounded me-3">
                                                        <i class="fas fa-barcode"></i>
                                                    </div>
                                                    <span class="fw-bold text-dark"><%= r.kode_lokasi || '-' %></span>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="fw-semibold text-dark">
                                                        <i class="fas fa-door-open me-2 text-muted"></i><%= r.ruangan || '-' %>
                                                    </span>
                                                    <span class="text-muted small mt-1">
                                                        <i class="fas fa-layer-group me-2 text-muted"></i>Rak: <strong><%= r.no_rak || '-' %></strong>
                                                    </span>
                                                </div>
                                            </td>

                                            <td>
                                                <% 
                                                    const kap = Number(r.kapasitas) || 0;
                                                    const ter = Number(r.terpakai) || 0;
                                                    const persentase = kap > 0 ? Math.round((ter / kap) * 100) : 0;
                                                    let warnaProgress = 'bg-success';
                                                    if(persentase > 70) warnaProgress = 'bg-warning';
                                                    if(persentase > 90) warnaProgress = 'bg-danger';
                                                %>
                                                <div class="d-flex justify-content-between mb-1 small">
                                                    <span class="fw-bold"><%= ter %> / <%= kap %></span>
                                                    <span class="text-muted"><%= persentase %>% Penuh</span>
                                                </div>
                                                <div class="progress" style="height: 6px;">
                                                    <div class="progress-bar <%= warnaProgress %>" role="progressbar" 
                                                         style="width: <%= persentase %>%;" 
                                                         aria-valuenow="<%= persentase %>" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </td>

                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a href="/lokasi/<%= r.id_lokasi %>" class="btn btn-sm btn-info text-white" title="Lihat Detail">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    
                                                    <a href="/lokasi/edit/<%= r.id_lokasi %>" class="btn btn-sm btn-warning text-white" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    
                                                    <form action="/lokasi/delete/<%= r.id_lokasi %>" method="POST" style="display:inline" 
                                                          onsubmit="return confirm('Hapus lokasi ini? Data arsip yang menggunakan lokasi ini mungkin akan kehilangan referensi.');">
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Hapus">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <div class="d-flex flex-column align-items-center">
                                                <i class="fas fa-map-marked-alt fa-3x mb-3 text-secondary opacity-50"></i>
                                                <h6 class="fw-bold">Belum ada data lokasi</h6>
                                                <small>Silakan tambah lokasi baru.</small>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div id="source-checkboxes" style="display:none;">
                <label><input type="checkbox" name="col" value="id_lokasi" checked> ID</label>
                <label><input type="checkbox" name="col" value="kode_lokasi" checked> Kode Lokasi</label>
                <label><input type="checkbox" name="col" value="ruangan" checked> Ruangan</label>
                <label><input type="checkbox" name="col" value="no_rak" checked> No Rak</label>
                <label><input type="checkbox" name="col" value="kapasitas" checked> Kapasitas</label>
                <label><input type="checkbox" name="col" value="terpakai" checked> Terpakai</label>
            </div>

        </section>
    </div>

</main> <%- include('../partials/list_template.ejs', { 
    baseUrl: '/lokasi', 
    contentId: 'konten-lokasi' 
}) %>