<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - ARISTA BPN Sleman</title>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --deep-blue: #0C356A;
            --mid-blue: #0174BE;
            --gold: #FFC436;
            --cream: #FFF0CE;
            --white: #FFFFFF;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: linear-gradient(135deg, var(--deep-blue) 0%, var(--mid-blue) 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 15px;
            overflow: hidden;
        }

        .register-container {
            width: 100%;
            max-width: 550px;
            /* Sedikit lebih lebar untuk form pendaftaran */
        }

        /* Header Section */
        .register-header {
            text-align: center;
            margin-bottom: 15px;
        }

        .register-logo {
            width: 70px;
            height: 70px;
            background-color: var(--cream);
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            border: 3px solid var(--gold);
            padding: 10px;
        }

        .register-logo img {
            width: 100%;
            height: auto;
            object-fit: contain;
        }

        .register-title {
            font-size: 26px;
            font-weight: 800;
            color: var(--gold);
            letter-spacing: -0.5px;
            margin-bottom: 2px;
        }

        .register-subtitle {
            font-size: 12px;
            color: var(--cream);
            opacity: 0.9;
        }

        /* Card - Cream Theme */
        .auth-wrap {
            background-color: var(--cream);
            border-radius: 24px;
            padding: 30px 40px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            border-bottom: 6px solid var(--gold);
        }

        .auth-wrap h2 {
            font-size: 22px;
            color: var(--deep-blue);
            margin-bottom: 20px;
            font-weight: 700;
            text-align: center;
        }

        /* Grid System untuk Form */
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group.full-width {
            grid-column: span 2;
        }

        .form-group label {
            display: block;
            margin-bottom: 6px;
            font-size: 11px;
            font-weight: 800;
            color: var(--deep-blue);
            text-transform: uppercase;
        }

        .input-container {
            position: relative;
        }

        .input-container i {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--mid-blue);
            font-size: 14px;
        }

        .form-group input {
            width: 100%;
            padding: 11px 12px 11px 40px;
            border: 2px solid rgba(12, 53, 106, 0.1);
            border-radius: 12px;
            font-size: 14px;
            transition: all 0.3s ease;
            background-color: var(--white);
        }

        .form-group input:focus {
            outline: none;
            border-color: var(--mid-blue);
            box-shadow: 0 0 0 3px rgba(1, 116, 190, 0.1);
        }

        /* Password Strength */
        .password-strength {
            font-size: 10px;
            font-weight: 700;
            margin-top: 5px;
            padding: 4px 8px;
            border-radius: 4px;
            display: none;
        }

        .password-strength.show {
            display: block;
        }

        .weak {
            background: #fee2e2;
            color: #991b1b;
        }

        .medium {
            background: #fef3c7;
            color: #92400e;
        }

        .strong {
            background: #dcfce7;
            color: #15803d;
        }

        /* Button */
        .btn {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 800;
            cursor: pointer;
            transition: all 0.3s ease;
            background-color: var(--deep-blue);
            color: var(--cream);
            text-transform: uppercase;
            letter-spacing: 1px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 5px;
        }

        .btn:hover {
            background-color: var(--mid-blue);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(12, 53, 106, 0.3);
        }

        /* Footer Link */
        .login-link-container {
            text-align: center;
            margin-top: 20px;
            border-top: 1px solid rgba(12, 53, 106, 0.1);
            padding-top: 15px;
        }

        .login-link-container p {
            font-size: 13px;
            color: #555;
        }

        .small-link {
            color: var(--mid-blue);
            text-decoration: none;
            font-weight: 700;
        }

        .register-footer {
            text-align: center;
            margin-top: 15px;
            font-size: 11px;
            color: var(--cream);
            opacity: 0.8;
        }

        /* Responsive Mobile */
        @media (max-width: 580px) {
            .form-row {
                grid-template-columns: 1fr;
                gap: 0;
            }

            .form-group.full-width,
            .form-group {
                grid-column: span 1;
            }

            body {
                overflow-y: auto;
                height: auto;
                padding: 40px 15px;
            }

            .auth-wrap {
                padding: 25px;
            }
        }
    </style>
</head>

<body>
    <div class="register-container">

        <header class="register-header">
            <div class="register-logo">
                <img src="/images/arista_logo.png" alt="Logo">
            </div>
            <h1 class="register-title">ARISTA</h1>
            <p class="register-subtitle">Kantor Pertanahan Kabupaten Sleman</p>
        </header>

        <main class="auth-wrap">
            <h2>Buat Akun Baru</h2>

            <form action="/register" method="post" id="registerForm" novalidate>
                <div class="form-row">
                    <div class="form-group full-width">
                        <label>Nama Lengkap</label>
                        <div class="input-container">
                            <i class="fas fa-id-card"></i>
                            <input name="nama_karyawan" type="text" placeholder="Nama sesuai identitas"
                                value="<%= (old && old.nama_karyawan) ? old.nama_karyawan : '' %>" required>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label>Username</label>
                        <div class="input-container">
                            <i class="fas fa-user-circle"></i>
                            <input name="username" type="text" placeholder="Pilih username unik"
                                value="<%= (old && old.username) ? old.username : '' %>" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <div class="input-container">
                            <i class="fas fa-key"></i>
                            <input id="password" name="password" type="password" placeholder="Min. 8 Karakter" required>
                        </div>
                        <div id="passwordStrength" class="password-strength"></div>
                    </div>

                    <div class="form-group">
                        <label>Konfirmasi</label>
                        <div class="input-container">
                            <i class="fas fa-check-double"></i>
                            <input id="confirm_password" name="confirm_password" type="password"
                                placeholder="Ulangi password" required>
                        </div>
                    </div>
                </div>

                <button class="btn" type="submit">
                    Daftar Sekarang <i class="fas fa-user-plus"></i>
                </button>
            </form>

            <div class="login-link-container">
                <p>Sudah memiliki akun? <a class="small-link" href="/login">Masuk di sini</a></p>
            </div>
        </main>

        <footer class="register-footer">
            <p>&copy; 2026 <strong>ARISTA BPN Sleman</strong></p>
        </footer>
    </div>

    <script>
        const passwordInput = document.getElementById('password');
        const confirmPasswordInput = document.getElementById('confirm_password');
        const strengthIndicator = document.getElementById('passwordStrength');

        passwordInput.addEventListener('input', function () {
            const val = this.value;
            if (val.length > 0) {
                strengthIndicator.classList.add('show');
                if (val.length < 8) {
                    strengthIndicator.className = 'password-strength show weak';
                    strengthIndicator.textContent = 'Terlalu Pendek';
                } else if (val.length < 12) {
                    strengthIndicator.className = 'password-strength show medium';
                    strengthIndicator.textContent = 'Cukup Kuat';
                } else {
                    strengthIndicator.className = 'password-strength show strong';
                    strengthIndicator.textContent = 'Sangat Kuat';
                }
            } else {
                strengthIndicator.classList.remove('show');
            }
        });

        document.getElementById('registerForm').addEventListener('submit', function (e) {
            if (passwordInput.value !== confirmPasswordInput.value) {
                e.preventDefault();
                alert('Konfirmasi password tidak cocok!');
            }
        });
    </script>
</body>

</html>