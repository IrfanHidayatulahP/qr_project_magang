<%- include('../../partials/header.ejs') %>

    <section class="container">
        <h1>Detail Buku Tanah</h1>

        <% if (error) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
            <% } %>
                <% if (success) { %>
                    <div class="alert alert-success">
                        <%= success %>
                    </div>
                    <% } %>

                        <table>
                            <tr>
                                <th>ID</th>
                                <td>
                                    <%= buku.id_buku_tanah %>
                                </td>
                            </tr>
                            <tr>
                                <th>Dokumen ID</th>
                                <td>
                                    <%= buku.id_dokumen %>
                                </td>
                            </tr>
                            <tr>
                                <th>No Reg</th>
                                <td>
                                    <%= buku.no_reg || '-' %>
                                </td>
                            </tr>
                            <tr>
                                <th>Jenis Hak</th>
                                <td>
                                    <%= buku.jenis_hak || '-' %>
                                </td>
                            </tr>
                            <tr>
                                <th>Luas Tanah (m&sup2;)</th>
                                <td>
                                    <%= buku.luas_tanah !=null ? buku.luas_tanah : '-' %>
                                </td>
                            </tr>
                            <tr>
                                <th>Nama Pemilik Asal</th>
                                <td>
                                    <%= buku.nama_pemilik_asal || '-' %>
                                </td>
                            </tr>
                            <tr>
                                <th>Tahun Terbit</th>
                                <td>
                                    <%= buku.tahun_terbit ? (new Date(buku.tahun_terbit)).getFullYear() : '-' %>
                                </td>
                            </tr>
                            <tr>
                                <th>No Peta</th>
                                <td>
                                    <%= buku.no_peta || '-' %>
                                </td>
                            </tr>
                            <tr>
                                <th>Keterangan</th>
                                <td>
                                    <%= buku.keterangan || '-' %>
                                </td>
                            </tr>
                            <tr>
                                <th>Status Buku</th>
                                <td>
                                    <%= buku.status_buku || '-' %>
                                </td>
                            </tr>
                        </table>

                        <p>
                            <a href="/buku-tanah/edit/<%= buku.id_buku_tanah %>">Edit</a> |
                            <a href="/buku-tanah">Kembali</a>
                        </p>
    </section>