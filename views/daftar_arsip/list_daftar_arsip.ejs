<%- include('../partials/header.ejs') %>

<main class="main-content">

    <div id="konten-daftar-arsip">
        <section class="container-fluid">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h3 class="fw-bold text-dark m-0">Daftar Arsip Vital</h3>
                    <p class="text-muted small mb-0">Kelola gabungan data Buku Tanah, Surat Ukur, dan Warkah.</p>
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-primary shadow-sm" href="/daftar-arsip/create">
                        <i class="fas fa-plus-circle me-1"></i> Buat Daftar
                    </a>
                    <button id="btn-open-download" class="btn btn-success shadow-sm" type="button">
                        <i class="fas fa-download me-1"></i> Download
                    </button>
                </div>
            </div>

            <% if (typeof error !=='undefined' && error) { %> 
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div> 
            <% } %>
            <% if (typeof success !=='undefined' && success) { %> 
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-check-circle me-2"></i><%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div> 
            <% } %>

            <div class="card border-0 shadow-sm mb-4" style="border-radius: 12px;">
                <div class="card-body p-3">
                    <form method="get" action="/daftar-arsip" class="mb-0 w-100">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 ps-3">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text" name="q" class="form-control border-start-0 border-end-0 shadow-none" 
                                placeholder="Cari berdasarkan Nomor Hak, Kode Klasifikasi, atau Uraian..." 
                                value="<%= (typeof filter_q !== 'undefined') ? filter_q : '' %>" />
                            <button type="submit" class="btn btn-primary px-4 rounded-end">Cari Data</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-0 shadow-sm" style="border-radius: 12px;">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px;" class="text-center py-3 text-uppercase small fw-bold">No</th>
                                    <th style="width: 25%;" class="py-3 text-uppercase small fw-bold">Identitas Arsip</th>
                                    <th style="width: 30%;" class="py-3 text-uppercase small fw-bold">Uraian Isi</th>
                                    <th style="width: 35%;" class="py-3 text-uppercase small fw-bold">Ketersediaan Fisik</th>
                                    <th style="width: 100px;" class="text-center py-3 text-uppercase small fw-bold">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (typeof records !=='undefined' && records && records.length) { %>
                                    <% records.forEach(r => { %>
                                        <tr data-id="<%= r.id_daftar_arsip %>">
                                            
                                            <td class="text-center fw-bold text-secondary">
                                                <%= r.nomor_urut %>
                                            </td>

                                            <td class="align-top py-3">
                                                <div class="d-flex flex-column gap-1">
                                                    <span class="fw-bold text-dark fs-6 text-break">
                                                        <%= r.nomor_hak || '-' %>
                                                    </span>
                                                    <div class="d-flex flex-wrap gap-2 mt-1">
                                                        <span class="badge bg-light text-dark border fw-normal">
                                                            <i class="fas fa-tag me-1 text-muted"></i><%= r.kode_klasifikasi || '-' %>
                                                        </span>
                                                        <% if(r.jenis_arsip_vital) { %>
                                                            <span class="badge bg-info bg-opacity-10 text-info border border-info fw-normal">
                                                                <%= r.jenis_arsip_vital %>
                                                            </span>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </td>

                                            <td class="align-top py-3">
                                                <div class="text-secondary mb-2 text-break" style="font-size: 0.9rem; line-height: 1.5;">
                                                    <%= r.nomor_item_arsip_uraian || '-' %>
                                                </div>
                                                <% if(r.kurun_waktu_berkas) { %>
                                                    <small class="text-muted bg-light px-2 py-1 rounded border">
                                                        <i class="far fa-calendar-alt me-1"></i> Tahun: <strong><%= r.kurun_waktu_berkas %></strong>
                                                    </small>
                                                <% } %>
                                            </td>

                                            <td class="align-top py-3">
                                                <div class="d-flex flex-column gap-2">
                                                    
                                                    <div class="d-flex align-items-center bg-white border rounded p-2 position-relative" style="border-left: 4px solid #3b82f6 !important;">
                                                        <div class="me-3 text-primary"><i class="fas fa-book fa-lg"></i></div>
                                                        <div class="flex-grow-1 lh-sm">
                                                            <div class="d-flex justify-content-between fw-bold text-dark" style="font-size: 0.85rem;">
                                                                <span>Buku Tanah</span>
                                                                <span class="text-muted small fw-normal"><%= r.jumlah_buku_tanah || '-' %> Lbr</span>
                                                            </div>
                                                            <div class="text-muted small mt-1">
                                                                <%= r.media_buku_tanah || '-' %> &bull; 
                                                                <%= r.lokasi_simpan_bt_ruang_rak || '-' %>
                                                                <% if(r.lokasi_simpan_bt_no_boks) { %>(Boks: <%= r.lokasi_simpan_bt_no_boks %>)<% } %>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="d-flex align-items-center bg-white border rounded p-2 position-relative" style="border-left: 4px solid #10b981 !important;">
                                                        <div class="me-3 text-success"><i class="fas fa-ruler-combined fa-lg"></i></div>
                                                        <div class="flex-grow-1 lh-sm">
                                                            <div class="d-flex justify-content-between fw-bold text-dark" style="font-size: 0.85rem;">
                                                                <span>Surat Ukur</span>
                                                                <span class="text-muted small fw-normal"><%= r.jumlah_surat_ukur || '-' %> Lbr</span>
                                                            </div>
                                                            <div class="text-muted small mt-1">
                                                                <%= r.media_surat_ukur || '-' %> &bull; 
                                                                <%= r.lokasi_simpan_su_ruang_rak || '-' %>
                                                                <% if(r.lokasi_simpan_su_no_boks) { %>(Boks: <%= r.lokasi_simpan_su_no_boks %>)<% } %>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="d-flex align-items-center bg-white border rounded p-2 position-relative" style="border-left: 4px solid #f59e0b !important;">
                                                        <div class="me-3 text-warning"><i class="fas fa-file-archive fa-lg"></i></div>
                                                        <div class="flex-grow-1 lh-sm">
                                                            <div class="d-flex justify-content-between fw-bold text-dark" style="font-size: 0.85rem;">
                                                                <span>Warkah</span>
                                                                <span class="text-muted small fw-normal"><%= r.jumlah_warkah || '-' %> Lbr</span>
                                                            </div>
                                                            <div class="text-muted small mt-1">
                                                                <%= r.media_warkah || '-' %> &bull; 
                                                                <%= r.lokasi_simpan_warkah_ruang_rak || '-' %>
                                                                <% if(r.lokasi_simpan_warkah_no_boks) { %>(Boks: <%= r.lokasi_simpan_warkah_no_boks %>)<% } %>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </td>

                                            <td class="text-center align-middle">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a href="/daftar-arsip/detail/<%= r.id_daftar_arsip %>" class="btn btn-sm btn-info text-white" title="Lihat Detail Lengkap">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    
                                                    <form action="/daftar-arsip/delete/<%= r.id_daftar_arsip %>" method="post" style="display:inline" 
                                                          onsubmit="return confirm('PERINGATAN KERAS!\n\nAnda akan menghapus:\n1. Data di daftar ini\n2. Data Asli Buku Tanah\n3. Data Asli Surat Ukur\n4. Data Asli Warkah\n\nData yang dihapus TIDAK BISA KEMBALI. Yakin ingin melanjutkan?');">
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Hapus Permanen Semuanya">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <div class="d-flex flex-column align-items-center">
                                                <i class="fas fa-folder-open fa-3x mb-3 text-secondary opacity-50"></i>
                                                <h6 class="fw-bold">Belum ada data daftar arsip</h6>
                                                <small>Silakan buat daftar baru untuk memulai.</small>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div id="source-checkboxes" style="display:none;">
                <label><input type="checkbox" name="col" value="nomor_urut" checked> No Urut</label>
                <label><input type="checkbox" name="col" value="nomor_hak" checked> Nomor Hak</label>
                <label><input type="checkbox" name="col" value="kode_klasifikasi" checked> Klasifikasi</label>
                <label><input type="checkbox" name="col" value="media_buku_tanah" checked> Media BT</label>
                <label><input type="checkbox" name="col" value="lokasi_simpan_bt_ruang_rak" checked> Lokasi BT</label>
                <label><input type="checkbox" name="col" value="media_surat_ukur" checked> Media SU</label>
                <label><input type="checkbox" name="col" value="lokasi_simpan_su_ruang_rak" checked> Lokasi SU</label>
                <label><input type="checkbox" name="col" value="media_warkah" checked> Media Warkah</label>
                <label><input type="checkbox" name="col" value="lokasi_simpan_warkah_ruang_rak" checked> Lokasi Warkah</label>
            </div>

        </section>
    </div>

</main> <%- include('../partials/list_template.ejs', { 
    baseUrl: '/daftar-arsip', 
    contentId: 'konten-daftar-arsip' 
}) %>