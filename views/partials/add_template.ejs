<style>
    /* --- TEMA ARISTA --- */
    :root {
        --deep-blue: #0C356A;
        --mid-blue: #0174BE;
        --gold: #FFC436;
        --cream: #FFF0CE;
        --white: #FFFFFF;
        --border-color: #E2E8F0;
    }

    /* Utilitas Teks */
    .letter-spacing-1 {
        letter-spacing: 0.5px;
        font-weight: 600;
        color: var(--deep-blue);
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    /* Area Upload File (Dashed) */
    .border-dashed {
        border-style: dashed !important;
        border-width: 2px !important;
        border-color: #cbd5e1 !important; /* Abu-abu soft */
        background-color: #f8fafc;
        transition: all 0.3s ease;
    }

    .border-dashed:hover {
        border-color: var(--mid-blue) !important;
        background-color: rgba(1, 116, 190, 0.05);
    }

    /* Input Focus: Biru Menengah (ARISTA Blue) */
    .form-control, .form-select {
        border: 1px solid var(--border-color);
        color: var(--deep-blue);
    }

    .form-control:focus,
    .form-select:focus {
        border-color: var(--mid-blue);
        box-shadow: 0 0 0 0.25rem rgba(1, 116, 190, 0.15);
    }

    /* Input Group Icon */
    .input-group-text {
        background-color: var(--cream); /* Aksen Cream */
        border-color: var(--border-color);
        color: var(--deep-blue);
    }

    /* Keterangan File */
    .file-selected-list {
        font-size: .875rem;
        color: #64748b;
        margin-top: 8px;
        font-style: italic;
    }

    .file-selected-list em {
        color: var(--mid-blue);
        font-weight: 600;
        font-style: normal;
    }
</style>

<main class="main-content ">

    <div class="container-fluid p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold text-dark mb-1">
                    <%= title %>
                </h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 small text-muted">
                        <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="<%= parentUrl %>" class="text-decoration-none">
                                <%= parentName %>
                            </a></li>
                        <li class="breadcrumb-item active" aria-current="page">Tambah Baru</li>
                    </ol>
                </nav>
            </div>
            <!-- DESKTOP BUTTON -->
            <a href="<%= parentUrl %>"
            class="btn btn-outline-secondary btn-sm d-none d-md-inline-flex align-items-center">
                <i class="fas fa-arrow-left me-2"></i>
                Kembali
            </a>

            <!-- MOBILE BUTTON (ICON ONLY) -->
            <a href="<%= parentUrl %>"
            class="btn d-inline-flex d-md-none align-items-center p-2"
            style="border:none; background:transparent;">
                <i class="fas fa-arrow-left fa-lg"></i>
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">

                <% if (typeof error !=='undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-circle me-2 fs-5"></i>
                            <div><strong>Gagal!</strong>
                                <%= error %>
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <% if (typeof success !=='undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle me-2 fs-5"></i>
                            <div><strong>Berhasil!</strong>
                                <%= success %>
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="card border-0 shadow rounded-4 overflow-hidden">
                    <div class="card-header bg-white p-4 border-bottom">
                        <div class="d-flex align-items-center text-primary">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                <i class="<%= icon %> fa-lg"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 fw-bold text-dark">Formulir <%= parentName %></h5>
                                <p class="mb-0 text-muted small">Isi data dokumen dengan lengkap dan benar.</p>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <form action="<%= formAction %>" method="POST" enctype="multipart/form-data">

                            <div id="target-form-content">
                                <div class="text-center py-5 text-muted">
                                    <i class="fas fa-spinner fa-spin me-2"></i>Memuat Form...
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                                <a href="<%= parentUrl %>" class="btn btn-light border">Batal</a>
                                <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm">
                                    <i class="fas fa-save me-2"></i>Simpan
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

<%- include('footer.ejs') %>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const contentId = "<%= contentId %>"; // ID dari konten input field
        const sourceContent = document.getElementById(contentId);
        const targetContent = document.getElementById('target-form-content');

        if (sourceContent && targetContent) {
            targetContent.innerHTML = sourceContent.innerHTML;
            sourceContent.remove(); // Hapus sumber agar tidak duplikat

            // Handle Input File UI
            const fileInputs = targetContent.querySelectorAll('input[type="file"]');
            fileInputs.forEach((inp, idx) => {
                let disp = inp.parentElement.querySelector('.file-selected-list');
                if (!disp) {
                    disp = document.createElement('div');
                    disp.className = 'file-selected-list';
                    inp.insertAdjacentElement('afterend', disp);
                }
                
                disp.textContent = inp.files && inp.files.length ? 
                    Array.from(inp.files).map(f => f.name).join(', ') : 'Belum ada file yang dipilih.';
                
                inp.addEventListener('change', () => {
                    const list = Array.from(inp.files).map(f => f.name);
                    disp.textContent = list.length ? list.join(', ') : 'Belum ada file yang dipilih.';
                });
            });
        }
    });
</script>