<style>
    .letter-spacing-1 {
        letter-spacing: 1px;
    }

    .border-dashed {
        border-style: dashed !important;
        border-color: #dee2e6;
    }

    /* Fokus Input Warna Kuning (Ciri Khas Edit) */
    .form-control:focus,
    .form-select:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.2);
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-color: #ced4da;
    }

    .file-selected-list {
        font-size: .875rem;
        color: #6b7280;
        margin-top: 6px;
    }
</style>

<main class="main-content">

    <div class="container-fluid p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold text-dark mb-1">
                    <%= title %>
                </h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 small text-muted">
                        <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="<%= parentUrl %>" class="text-decoration-none">
                                <%= parentName %>
                            </a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <%= typeof breadcrumbActive !=='undefined' ? breadcrumbActive : title %>
                        </li>
                    </ol>
                </nav>
            </div>
            <!-- DESKTOP BUTTON -->
            <a href="<%= parentUrl %>"
            class="btn btn-outline-secondary btn-sm d-none d-md-inline-flex align-items-center">
                <i class="fas fa-arrow-left me-2"></i>
                Kembali
            </a>

            <!-- MOBILE BUTTON (ICON ONLY) -->
            <a href="<%= parentUrl %>"
            class="btn d-inline-flex d-md-none align-items-center p-2"
            style="border:none; background:transparent;">
                <i class="fas fa-arrow-left fa-lg"></i>
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">

                <% if (typeof error !=='undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-circle me-2 fs-5"></i>
                            <div><strong>Gagal Update!</strong>
                                <%= error %>
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="card border-0 shadow rounded-4 overflow-hidden">
                    <div class="card-header bg-white p-4 border-bottom">
                        <div class="d-flex align-items-center text-warning">
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3">
                                <i class="<%= icon %> fa-lg"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 fw-bold text-dark">Perbarui Data <%= parentName %>
                                </h5>
                                <p class="mb-0 text-muted small">Silakan ubah data yang diperlukan.</p>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <form action="<%= formAction %>" method="POST" enctype="multipart/form-data">

                            <div id="target-form-content">
                                <div class="text-center py-5 text-muted">
                                    <i class="fas fa-spinner fa-spin me-2"></i>Memuat Data...
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                                <a href="<%= parentUrl %>" class="btn btn-light border">Batal</a>
                                <button type="submit" class="btn btn-warning px-4 fw-bold shadow-sm text-dark">
                                    <i class="fas fa-save me-2"></i>Update 
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

<%- include('footer.ejs') %>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const contentId = "<%= contentId %>";
        const sourceContent = document.getElementById(contentId);
        const targetContent = document.getElementById('target-form-content');

        if (sourceContent && targetContent) {
            targetContent.innerHTML = sourceContent.innerHTML;
            sourceContent.remove();

            // Pasang listener untuk semua input[type=file] di dalam targetContent
            const fileInputs = targetContent.querySelectorAll('input[type="file"]');
            fileInputs.forEach((inp) => {
                let disp = inp.parentElement.querySelector('.file-selected-list');
                if (!disp) {
                    disp = document.createElement('div');
                    disp.className = 'file-selected-list';
                    inp.insertAdjacentElement('afterend', disp);
                }
                disp.textContent = inp.files && inp.files.length ? 
                    Array.from(inp.files).map(f => f.name).join(', ') : 'Belum ada file yang dipilih.';
                
                inp.addEventListener('change', () => {
                    const list = Array.from(inp.files).map(f => f.name);
                    disp.textContent = list.length ? list.join(', ') : 'Belum ada file yang dipilih.';
                });
            });

            // jika ada hash #upload-file, scroll ke situ
            if (window.location.hash === '#upload-file') {
                const el = targetContent.querySelector('#upload-file');
                if (el) setTimeout(() => el.scrollIntoView({ behavior: 'smooth', block: 'start' }), 200);
            }
        }
    });
</script>