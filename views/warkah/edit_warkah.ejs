<%- include('../partials/header.ejs') %>

    <div id="form-content-warkah" style="display: none;">
        <h6 class="text-secondary fw-bold text-uppercase small mb-3 letter-spacing-1 border-bottom pb-2">
            <i class="fas fa-info-circle me-2"></i>Identitas Warkah
        </h6>

        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <label for="nomor_di_208" class="form-label fw-semibold text-dark small">No. DI 208</label>
                <input type="text" class="form-control" name="nomor_di_208" id="nomor_di_208"
                    value="<%= warkah.nomor_di_208 || '' %>">
            </div>

            <div class="col-md-6">
                <label for="nomor_hak" class="form-label fw-semibold text-dark small">Nomor Hak</label>
                <input type="text" class="form-control" name="nomor_hak" id="nomor_hak"
                    value="<%= warkah.nomor_hak || '' %>">
            </div>

            <div class="col-md-6">
                <label for="kode_klasifikasi" class="form-label fw-semibold text-dark small">Kode Klasifikasi</label>
                <input type="text" class="form-control" name="kode_klasifikasi" id="kode_klasifikasi"
                    value="<%= warkah.kode_klasifikasi || '' %>">
            </div>

            <div class="col-md-6">
                <label for="tahun_terbit" class="form-label fw-semibold text-dark small">Tahun Terbit</label>
                <% let dateVal='' ; if (warkah.tahun_terbit) { const d=new Date(warkah.tahun_terbit); if
                    (!isNaN(d.getTime())) dateVal=d.toISOString().split('T')[0]; else
                    dateVal=String(warkah.tahun_terbit); } %>
                    <input type="date" class="form-control" name="tahun_terbit" id="tahun_terbit"
                        value="<%= dateVal %>">
            </div>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <label for="media" class="form-label fw-semibold text-dark small">Media</label>
                <select class="form-select" name="media" id="media">
                    <% const mediaOptions=['Kertas','Digital','Microfilm']; %>
                        <option value="">-- Pilih Media --</option>
                        <% mediaOptions.forEach(m=> { %>
                            <option value="<%= m %>" <%=(warkah.media===m) ? 'selected' : '' %>><%= m %>
                            </option>
                            <% }) %>
                </select>
            </div>

            <div class="col-md-6">
                <label for="jumlah" class="form-label fw-semibold text-dark small">Jumlah</label>
                <input type="number" class="form-control" name="jumlah" id="jumlah"
                    value="<%= (warkah.jumlah != null) ? warkah.jumlah : '' %>">
            </div>
        </div>

        <div class="bg-light p-4 rounded-3 border border-dashed mb-3">
            <h6 class="text-secondary fw-bold text-uppercase small mb-3"><i
                    class="fas fa-map-marker-alt me-2"></i>Lokasi Penyimpanan</h6>
            <div class="mb-3">
                <select class="form-select" name="lokasi_penyimpanan" id="lokasi_penyimpanan">
                    <option value="">-- Pilih Lokasi --</option>
                    <% if (typeof locations !=='undefined' && Array.isArray(locations)) { %>
                        <% locations.forEach(loc=> { %>
                            <option value="<%= loc.kode_lokasi %>" <%=(warkah.lokasi_penyimpanan===loc.kode_lokasi)
                                ? 'selected' : '' %>>
                                <%= loc.kode_lokasi %>
                                    <% if (loc.ruangan) { %> â€” <%= loc.ruangan %>
                                            <% } %>
                                                <% if (loc.no_rak) { %> / Rak <%= loc.no_rak %>
                                                        <% } %>
                            </option>
                            <% }) %>
                                <% } %>
                </select>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label for="no_boks_definitif" class="form-label fw-semibold text-dark small">No. Boks
                        Definitif</label>
                    <input type="text" class="form-control" name="no_boks_definitif" id="no_boks_definitif"
                        value="<%= warkah.no_boks_definitif || '' %>">
                </div>
                <div class="col-md-6">
                    <label for="nomor_folder" class="form-label fw-semibold text-dark small">Nomor Folder</label>
                    <input type="number" class="form-control" name="nomor_folder" id="nomor_folder"
                        value="<%= (warkah.nomor_folder != null) ? warkah.nomor_folder : '' %>">
                </div>
            </div>
        </div>

        <!-- UPLOAD / FILES SECTION -->
        <div class="mt-4" id="upload-file">
            <h6 class="text-secondary fw-bold text-uppercase small mb-3 border-bottom pb-2">
                <i class="fas fa-file-pdf me-2"></i>File Dokumen (PDF)
            </h6>

            <% let existingFiles=[]; if (warkah.files) { try { existingFiles=JSON.parse(warkah.files); } catch (e) {
                existingFiles=[]; } } %>

                <div class="mb-3">
                    <label class="form-label small fw-semibold">File Sekarang</label>
                    <% if (existingFiles.length) { %>
                        <ul class="list-unstyled mb-2">
                            <% existingFiles.forEach(function(f) { %>
                                <li>
                                    <a href="/<%= f %>" target="_blank" class="text-decoration-none">
                                        <i class="fas fa-file-pdf text-danger me-2"></i>
                                        <%= f.split('/').pop() %>
                                    </a>
                                </li>
                                <% }); %>
                        </ul>
                        <div class="form-text small text-muted">Upload file baru akan menggantikan file lama.</div>
                        <% } else { %>
                            <div class="text-muted small mb-2">Belum ada file PDF untuk warkah ini.</div>
                            <% } %>
                </div>

                <div>
                    <label for="files" class="form-label fw-semibold text-dark small">Upload PDF (ganti file
                        lama)</label>
                    <input type="file" class="form-control" name="files" id="files" accept="application/pdf" multiple>
                    <div class="form-text small text-muted mt-1">Pilih satu atau beberapa file PDF. File baru akan
                        menggantikan daftar file yang lama.</div>
                </div>
        </div>
    </div>

    <%- include('../partials/edit_template.ejs', { title: 'Edit Warkah' , parentName: 'Warkah' , parentUrl: '/warkah' ,
        breadcrumbActive: 'Edit Data #' + warkah.id_warkah, formAction: '/warkah/edit/' + warkah.id_warkah,
        icon: 'fas fa-pencil-alt' , contentId: 'form-content-warkah' }) %>