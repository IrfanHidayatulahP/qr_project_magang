<%- include('../partials/header.ejs') %>

<main class="main-content">
    <div class="container-fluid p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold text-dark mb-1">Tambah Warkah</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 small text-muted">
                        <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/warkah" class="text-decoration-none">Daftar Warkah</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Tambah Baru</li>
                    </ol>
                </nav>
            </div>
            <a href="/warkah" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-2"></i>Kembali
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">

                <% if (typeof error !=='undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-circle me-2 fs-5"></i>
                            <div><strong>Gagal!</strong> <%= error %></div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="card border-0 shadow rounded-4 overflow-hidden">
                    <div class="card-header bg-white p-4 border-bottom">
                        <div class="d-flex align-items-center text-primary">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                <i class="fas fa-file-archive fa-lg"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 fw-bold text-dark">Formulir Warkah</h5>
                                <p class="mb-0 text-muted small">Isi data dokumen dengan lengkap dan benar.</p>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <form action="/warkah/create" method="POST" enctype="multipart/form-data">
                            
                            <h6 class="text-secondary fw-bold text-uppercase small mb-3 border-bottom pb-2">
                                <i class="fas fa-info-circle me-2"></i>Identitas Warkah
                            </h6>
                            
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold text-dark small">Nomor DI-208 <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="nomor_di_208" 
                                           value="<%= (typeof old !== 'undefined' && old.nomor_di_208) ? old.nomor_di_208 : '' %>" required>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold text-dark small">Nomor Hak</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-hashtag text-muted"></i></span>
                                        <input type="text" class="form-control" name="nomor_hak" 
                                               value="<%= (typeof old !== 'undefined' && old.nomor_hak) ? old.nomor_hak : '' %>">
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label fw-semibold text-dark small">Tahun Terbit</label>
                                    <input type="date" class="form-control" name="tahun_terbit" 
                                           value="<%= (typeof old !== 'undefined' && old.tahun_terbit) ? old.tahun_terbit : '' %>">
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label fw-semibold text-dark small">Kode Klasifikasi</label>
                                    <input type="text" class="form-control" name="kode_klasifikasi" 
                                           value="<%= (typeof old !== 'undefined' && old.kode_klasifikasi) ? old.kode_klasifikasi : '' %>">
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label fw-semibold text-dark small">Jenis Arsip Vital</label>
                                    <input type="text" class="form-control" name="jenis_arsip_vital" 
                                           value="<%= (typeof old !== 'undefined' && old.jenis_arsip_vital) ? old.jenis_arsip_vital : '' %>">
                                </div>

                                <div class="col-12">
                                    <label class="form-label fw-semibold text-dark small">Uraian Informasi Arsip</label>
                                    <textarea class="form-control" name="uraian_informasi_arsip" rows="2"><%= (typeof old !== 'undefined' && old.uraian_informasi_arsip) ? old.uraian_informasi_arsip : '' %></textarea>
                                </div>
                            </div>

                            <h6 class="text-secondary fw-bold text-uppercase small mb-3 border-bottom pb-2 mt-4">
                                <i class="fas fa-history me-2"></i>Retensi Arsip
                            </h6>
                            
                            <div class="row g-3 mb-4">
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold text-dark small">Jangka Simpan Aktif</label>
                                    <input type="text" class="form-control" name="jangka_simpan_aktif" 
                                           value="<%= (typeof old !== 'undefined' && old.jangka_simpan_aktif) ? old.jangka_simpan_aktif : '' %>">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold text-dark small">Jangka Simpan Inaktif</label>
                                    <input type="text" class="form-control" name="jangka_simpan_inaktif" 
                                           value="<%= (typeof old !== 'undefined' && old.jangka_simpan_inaktif) ? old.jangka_simpan_inaktif : '' %>">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold text-dark small">Ket. Jangka Simpan</label>
                                    <input type="text" class="form-control" name="jangka_simpan_keterangan" 
                                           value="<%= (typeof old !== 'undefined' && old.jangka_simpan_keterangan) ? old.jangka_simpan_keterangan : '' %>">
                                </div>
                            </div>

                            <h6 class="text-secondary fw-bold text-uppercase small mb-3 border-bottom pb-2 mt-4">
                                <i class="fas fa-box-open me-2"></i>Fisik & Lokasi
                            </h6>

                            <div class="bg-light p-4 rounded-3 border border-dashed">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label class="form-label fw-semibold text-dark small">Media Arsip</label>
                                        <select class="form-select" name="media">
                                            <option value="">-- Pilih --</option>
                                            <option value="Kertas" <%= (typeof old !== 'undefined' && old.media==='Kertas') ? 'selected' : '' %>>Kertas</option>
                                            <option value="Digital" <%= (typeof old !== 'undefined' && old.media==='Digital') ? 'selected' : '' %>>Digital</option>
                                            <option value="Microfilm" <%= (typeof old !== 'undefined' && old.media==='Microfilm') ? 'selected' : '' %>>Microfilm</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label fw-semibold text-dark small">Jumlah (Lembar)</label>
                                        <input type="number" class="form-control" name="jumlah" 
                                               value="<%= (typeof old !== 'undefined' && old.jumlah) ? old.jumlah : '' %>">
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label fw-semibold text-dark small">Perkembangan</label>
                                        <select class="form-select" name="tingkat_perkembangan">
                                            <option value="">-- Pilih --</option>
                                            <option value="Asli" <%= (typeof old !== 'undefined' && old.tingkat_perkembangan==='Asli') ? 'selected' : '' %>>Asli</option>
                                            <option value="Copy" <%= (typeof old !== 'undefined' && old.tingkat_perkembangan==='Copy') ? 'selected' : '' %>>Copy</option>
                                            <option value="Salinan" <%= (typeof old !== 'undefined' && old.tingkat_perkembangan==='Salinan') ? 'selected' : '' %>>Salinan</option>
                                        </select>
                                    </div>

                                    <div class="col-12 mt-3">
                                        <label class="form-label fw-semibold text-dark small">Lokasi Rak / Ruangan</label>
                                        <select class="form-select" name="lokasi_penyimpanan">
                                            <option value="">-- Pilih Kode Lokasi --</option>
                                            <% if (typeof locations !== 'undefined' && Array.isArray(locations)) { %>
                                                <% locations.forEach(function(loc) { %>
                                                    <option value="<%= loc.kode_lokasi %>" <%= (typeof old !== 'undefined' && old.lokasi_penyimpanan === loc.kode_lokasi) ? 'selected' : '' %>>
                                                        <%= loc.kode_lokasi %> <%= loc.ruangan ? 'â€” ' + loc.ruangan : '' %>
                                                    </option>
                                                <% }); %>
                                            <% } %>
                                        </select>
                                    </div>

                                    <div class="col-md-6 mt-3">
                                        <label class="form-label fw-semibold text-dark small">No. Boks</label>
                                        <input type="text" class="form-control" name="no_boks_definitif" 
                                               value="<%= (typeof old !== 'undefined' && old.no_boks_definitif) ? old.no_boks_definitif : '' %>">
                                    </div>
                                    <div class="col-md-6 mt-3">
                                        <label class="form-label fw-semibold text-dark small">No. Folder</label>
                                        <input type="number" class="form-control" name="nomor_folder" 
                                               value="<%= (typeof old !== 'undefined' && old.nomor_folder) ? old.nomor_folder : '' %>">
                                    </div>
                                    <div class="col-md-6 mt-3">
                                        <label class="form-label fw-semibold text-dark small">Metode Perlindungan</label>
                                        <select class="form-select" name="metode_perlindungan">
                                            <option value="">-- Pilih --</option>
                                            <option value="Vaulting" <%= (typeof old !== 'undefined' && old.metode_perlindungan==='Vaulting') ? 'selected' : '' %>>Vaulting</option>
                                            <option value="Cloud" <%= (typeof old !== 'undefined' && old.metode_perlindungan==='Cloud') ? 'selected' : '' %>>Cloud</option>
                                            <option value="Physical" <%= (typeof old !== 'undefined' && old.metode_perlindungan==='Physical') ? 'selected' : '' %>>Physical</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <h6 class="text-secondary fw-bold text-uppercase small mb-3 border-bottom pb-2">
                                        <i class="fas fa-file-pdf me-2"></i>Upload Dokumen PDF
                                    </h6>
                                    <div class="col-md-12">
                                        <label class="form-label fw-semibold text-dark small">File Warkah (PDF)</label>
                                        <input type="file" class="form-control" name="files" accept="application/pdf" multiple>
                                        <div class="form-text text-muted small">
                                            <i class="fas fa-info-circle me-1"></i>Format file harus PDF. Bisa pilih lebih dari satu.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <label class="form-label fw-semibold text-dark small">Keterangan Tambahan</label>
                                    <textarea class="form-control" name="keterangan" rows="3"><%= (typeof old !== 'undefined' && old.keterangan) ? old.keterangan : '' %></textarea>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                                <a href="/warkah" class="btn btn-light border">Batal</a>
                                <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm">
                                    <i class="fas fa-save me-2"></i>Simpan Data
                                </button>
                            </div>

                        </form>
                        </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs') %>