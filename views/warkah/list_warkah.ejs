<%- include('../partials/header.ejs') %>

<main class="main-content">

    <div id="konten-warkah">
        <section class="container-fluid">

            <div class="desktop-header d-none d-md-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-dark m-0">Warkah</h3>

                <div class="d-flex gap-2">
                    <a href="/warkah/create" class="btn btn-primary btn-dashboard">
                        <i class="fas fa-plus me-1"></i> Tambah
                    </a>

                    <button id="btn-open-download"
                            class="btn btn-success btn-dashboard"
                            type="button">
                        <i class="fas fa-download me-1"></i> Download
                    </button>
                </div>
            </div>

            <% if (typeof error !=='undefined' && error) { %>
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <% if (typeof success !=='undefined' && success) { %>
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-check-circle me-2"></i> <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <div class="card border-0 shadow-sm" style="border-radius: 12px;">
                <div class="card-body p-4">

                    <form method="get" action="/warkah" class="mb-4 d-none d-md-block">
                        <div class="search-box">
                            <div class="input-group">

                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>

                                <input type="text"
                                    name="q"
                                    class="form-control"
                                    placeholder="Cari ID / No DI 208 / Nomor Hak"
                                    value="<%= (typeof filter_q !== 'undefined') ? filter_q : '' %>">

                                <button class="btn btn-primary" type="submit">
                                    Cari
                                </button>

                            </div>
                        </div>
                    </form>

                    <div class="table-responsive d-none d-md-block">
                        <table class="table table-hover align-middle" style="white-space: nowrap;">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>No. DI 208</th>
                                    <th>Nomor Hak</th>
                                    <th>Klasifikasi</th>
                                    <th>Tahun</th>
                                    <th>Media</th>
                                    <th>Jumlah</th>
                                    <th>Lokasi</th>
                                    <th class="text-center">Files (PDF)</th>
                                    <th class="text-center">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (Array.isArray(records) && records.length) { %>
                                    <% records.forEach(r => { %>
                                        <tr data-id="<%= r.id_warkah %>">
                                            <td class="fw-bold text-secondary"><%= r.id_warkah %></td>
                                            
                                            <td>
                                                <span class="fw-bold text-dark"><%= r.nomor_di_208 || '-' %></span>
                                            </td>
                                            
                                            <td><%= r.nomor_hak || '-' %></td>
                                            
                                            <td>
                                                <% if(r.kode_klasifikasi) { %>
                                                    <span class="badge bg-secondary bg-opacity-10 text-dark border">
                                                        <%= r.kode_klasifikasi %>
                                                    </span>
                                                <% } else { %> - <% } %>
                                            </td>

                                            <td>
                                                <% 
                                                    let _year='-'; 
                                                    const tv=r.tahun_terbit; 
                                                    if (tv) { 
                                                        if (tv instanceof Date) { _year=tv.getFullYear(); } 
                                                        else { 
                                                            const s=String(tv).trim(); 
                                                            if (/^\d{4}$/.test(s)) { _year=s; } 
                                                            else { const d=new Date(s); _year=isNaN(d.getTime()) ? '-' : d.getFullYear(); } 
                                                        } 
                                                    } 
                                                %>
                                                <%= _year %>
                                            </td>

                                            <td><%= r.media || '-' %></td>
                                            <td><%= (r.jumlah != null) ? r.jumlah : '-' %></td>
                                            <td><i class="fas fa-map-marker-alt text-danger me-1"></i><%= r.lokasi_penyimpanan || '-' %></td>

                                            <td class="text-center">
                                                <% let files=[]; if (r.files) { try { files=JSON.parse(r.files); } catch(e) { files=[]; } } %>
                                                
                                                <% if (files.length) { %>
                                                    <div class="d-flex justify-content-center gap-2">
                                                        <% files.forEach((f, idx)=> { %>
                                                            <a href="/<%= f %>" target="_blank" class="btn btn-sm btn-outline-danger" title="Buka PDF">
                                                                <i class="fas fa-file-pdf"></i>
                                                            </a>
                                                        <% }) %>
                                                    </div>
                                                <% } else { %>
                                                    <a href="/warkah/edit/<%= r.id_warkah %>#upload-file" 
                                                       class="btn btn-sm btn-outline-primary" title="Upload PDF">
                                                        <i class="fas fa-upload me-1"></i> Upload
                                                    </a>
                                                <% } %>
                                            </td>

                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a href="/warkah/<%= r.id_warkah %>" class="btn btn-sm btn-info text-white" title="Lihat">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/warkah/edit/<%= r.id_warkah %>" class="btn btn-sm btn-warning text-white" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form action="/warkah/delete/<%= r.id_warkah %>" method="post" style="display:inline" onsubmit="return confirm('Hapus data warkah ini?');">
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Hapus">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="11" class="text-center py-5 text-muted">
                                            <div class="d-flex flex-column align-items-center">
                                                <i class="fas fa-file-invoice fa-3x mb-3 text-secondary opacity-50"></i>
                                                <h6 class="fw-bold">Belum ada data Warkah</h6>
                                                <small>Silakan tambahkan data baru melalui tombol Tambah.</small>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- MOBILE CARD VIEW -->
                    <div class="d-block d-md-none">

                        <div class="mobile-header mb-3 px-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="fw-bold m-0">Warkah</h5>
                                <div class="d-flex gap-2">
                                    <a href="/warkah/create" class="btn btn-primary btn-sm">
                                        <i class="fas fa-plus"></i>
                                    </a>

                                    <button id="btn-open-download-mobile"
                                            class="btn btn-success btn-sm"
                                            type="button">
                                        <i class="fas fa-download"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="d-block d-md-none mb-3 px-2">
                        <!-- MOBILE SEARCH -->
                            <form method="get" action="/warkah">
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fas fa-search text-muted"></i>
                                    </span>
                                    <input type="text"
                                        name="q"
                                        class="form-control"
                                        placeholder="Cari ID / No DI 208 / Nomor Hak"
                                        value="<%= (typeof filter_q !== 'undefined') ? filter_q : '' %>">
                                    <button class="btn btn-primary" type="submit">Cari</button>
                                </div>
                            </form>
                        </div>

                        <% if (Array.isArray(records) && records.length) { %>
                            <% records.forEach(r => { %>


                                

                                <div class="card mb-3 shadow-sm border-0 mobile-arsip-card">
                                    <div class="card-body">

                                        <!-- HEADER -->
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                
                                                <small class="fw-bold text-primary">
                                                    No. DI 208: <%= r.nomor_di_208 || '-' %>
                                                </small>
                                            </div>        
                                        </div>

                                        <% if(r.kode_klasifikasi) { %>
                                                <span class="badge bg-secondary bg-opacity-10 text-dark border">
                                                    <%= r.kode_klasifikasi %>
                                                </span>
                                        <% } %>

                                        <!-- BODY -->
                                        <div class="small mb-2">
                                            <div><strong>Nomor Hak:</strong> <%= r.nomor_hak || '-' %></div>
                                            <div><strong>Tahun:</strong> <%= r.tahun_terbit || '-' %></div>
                                            <div><strong>Media:</strong> <%= r.media || '-' %></div>
                                            <div><strong>Jumlah:</strong> <%= (r.jumlah != null) ? r.jumlah : '-' %></div>
                                            <div>
                                                <strong>Lokasi:</strong>
                                                <i class="fas fa-map-marker-alt text-danger ms-1 me-1"></i>
                                                <%= r.lokasi_penyimpanan || '-' %>
                                            </div>
                                        </div>

                                        <!-- FILE -->
                                        <div class="d-flex justify-content-between align-items-center mb-3">

                                            <!-- FILE -->
                                            <div>
                                                <% let files=[]; if (r.files) { try { files=JSON.parse(r.files); } catch(e) {} } %>

                                                <% if (files.length) { %>
                                                    <a href="/<%= files[0] %>" target="_blank"
                                                    class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-file-pdf me-1"></i> PDF
                                                    </a>
                                                <% } else { %>
                                                    <a href="/warkah/edit/<%= r.id_warkah %>#upload-file"
                                                    class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-upload me-1"></i> Upload
                                                    </a>
                                                <% } %>
                                            </div>
                                        </div>

                                        <!-- ACTION -->
                                        <div class="d-flex justify-content-between gap-2">
                                            <a href="/warkah/<%= r.id_warkah %>"
                                            class="btn btn-sm btn-outline-info w-100">
                                                <i class="fas fa-eye me-1"></i> Detail
                                            </a>

                                            <a href="/warkah/edit/<%= r.id_warkah %>"
                                            class="btn btn-sm btn-outline-warning w-100">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </a>

                                            <form action="/warkah/delete/<%= r.id_warkah %>" method="post"
                                                onsubmit="return confirm('Hapus data warkah ini?');"
                                                class="w-100">
                                                <button class="btn btn-sm btn-outline-danger w-100">
                                                    <i class="fas fa-trash me-1"></i> Hapus
                                                </button>
                                            </form>
                                        </div>

                                    </div>
                                </div>

                            <% }) %>
                        <% } else { %>
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-file-invoice fa-3x mb-3 opacity-50"></i>
                                <div class="fw-bold">Belum ada data Warkah</div>
                            </div>
                        <% } %>

                    </div>
                </div>
            </div>

            <div id="source-checkboxes" style="display:none;">
                <label><input type="checkbox" name="col" value="id_warkah" checked> ID</label>
                <label><input type="checkbox" name="col" value="nomor_di_208" checked> No. DI 208</label>
                <label><input type="checkbox" name="col" value="nomor_hak" checked> Nomor Hak</label>
                <label><input type="checkbox" name="col" value="kode_klasifikasi" checked> Klasifikasi</label>
                <label><input type="checkbox" name="col" value="tahun_terbit" checked> Tahun</label>
                <label><input type="checkbox" name="col" value="media" checked> Media</label>
                <label><input type="checkbox" name="col" value="jumlah" checked> Jumlah</label>
                <label><input type="checkbox" name="col" value="lokasi_penyimpanan" checked> Lokasi</label>
                <label><input type="checkbox" name="col" value="files" checked> Files</label>
                <label><input type="checkbox" name="col" value="uraian_informasi_arsip" checked> Uraian</label>
            </div>

        </section>
    </div>

</main> 

<%- include('../partials/list_template.ejs', { baseUrl: '/warkah' , contentId: 'konten-warkah' }) %>
<%- include('../partials/footer.ejs') %>