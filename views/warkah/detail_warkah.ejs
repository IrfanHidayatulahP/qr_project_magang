<%- include('../partials/header.ejs') %>

<div id="detail-content-warkah" style="display: none;">
    <div class="row g-4">
                        
        <div class="col-md-6 border-end-md">
            
            <h6 class="text-secondary text-uppercase small fw-bold mb-4 letter-spacing-1">
                <i class="fas fa-info-circle me-2"></i>Identitas Warkah
            </h6>

            <div class="row g-4 mb-4">
                <div class="col-6">
                    <label class="small text-muted mb-1 d-block">Nomor Hak</label>
                    <span class="fs-6 fw-bold text-dark"><%= warkah.nomor_hak || '-' %></span>
                </div>
                <div class="col-6">
                    <label class="small text-muted mb-1 d-block">Tahun Terbit</label>
                    <span class="fw-bold text-dark">
                        <% 
                            let _year = '-'; 
                            const tv = warkah.tahun_terbit; 
                            if (tv) { 
                                const s = String(tv).trim(); 
                                // Cek apakah formatnya YYYY atau Date String
                                _year = /^\d{4}$/.test(s) ? s : new Date(s).getFullYear(); 
                                if (isNaN(_year)) _year = '-';
                            } 
                        %>
                        <%= _year %>
                    </span>
                </div>
                <div class="col-6">
                    <label class="small text-muted mb-1 d-block">Kode Klasifikasi</label>
                    <span class="badge bg-light text-dark border"><%= warkah.kode_klasifikasi || '-' %></span>
                </div>
                <div class="col-6">
                    <label class="small text-muted mb-1 d-block">Jenis Arsip Vital</label>
                    <span class="text-dark"><%= warkah.jenis_arsip_vital || '-' %></span>
                </div>
            </div>

            <div class="mb-4">
                <label class="small text-muted mb-1 d-block fw-bold">Uraian Informasi Arsip</label>
                <div class="bg-light p-3 rounded border" style="font-size: 0.95rem; line-height: 1.6; min-height: 80px;">
                    <%= warkah.uraian_informasi_arsip || '-' %>
                </div>
            </div>

            <hr class="border-light">

            <div class="row g-4">
                <div class="col-6">
                    <label class="small text-muted mb-1 d-block">Media Arsip</label>
                    <% if(warkah.media === 'Digital') { %>
                        <span class="text-info fw-bold"><i class="fas fa-laptop me-1"></i> Digital</span>
                    <% } else if(warkah.media === 'Microfilm') { %>
                        <span class="text-warning fw-bold"><i class="fas fa-film me-1"></i> Microfilm</span>
                    <% } else { %>
                        <span class="text-secondary fw-bold"><i class="fas fa-file-alt me-1"></i> Kertas</span>
                    <% } %>
                </div>
                <div class="col-6">
                    <label class="small text-muted mb-1 d-block">Perkembangan</label>
                    <span class="fw-bold text-dark"><%= warkah.tingkat_perkembangan || '-' %></span>
                </div>
                <div class="col-12">
                    <label class="small text-muted mb-1 d-block">Jumlah Fisik</label>
                    <span class="fw-bold text-dark"><%= (warkah.jumlah != null) ? warkah.jumlah : '-' %> Lembar/Berkas</span>
                </div>
            </div>
        </div>

        <div class="col-md-6 ps-md-4">
            
            <h6 class="text-secondary text-uppercase small fw-bold mb-4 letter-spacing-1">
                <i class="fas fa-history me-2"></i>Jadwal Retensi Arsip
            </h6>
            <div class="row g-2 mb-4">
                <div class="col-4">
                    <div class="p-2 border rounded text-center bg-white h-100">
                        <small class="d-block text-muted mb-1" style="font-size:0.7rem">Jangka Aktif</small>
                        <strong class="text-primary"><%= warkah.jangka_simpan_aktif || '-' %></strong>
                    </div>
                </div>
                <div class="col-4">
                    <div class="p-2 border rounded text-center bg-white h-100">
                        <small class="d-block text-muted mb-1" style="font-size:0.7rem">Jangka Inaktif</small>
                        <strong class="text-secondary"><%= warkah.jangka_simpan_inaktif || '-' %></strong>
                    </div>
                </div>
                <div class="col-4">
                    <div class="p-2 border rounded text-center bg-white h-100">
                        <small class="d-block text-muted mb-1" style="font-size:0.7rem">Keterangan</small>
                        <span class="small fw-bold"><%= warkah.jangka_simpan_keterangan || '-' %></span>
                    </div>
                </div>
            </div>

            <h6 class="text-secondary text-uppercase small fw-bold mb-4 letter-spacing-1">
                <i class="fas fa-map-marker-alt me-2"></i>Lokasi Penyimpanan
            </h6>

            <div class="bg-light p-3 rounded-3 border border-dashed mb-3">
                <div class="d-flex align-items-start mb-3">
                    <div class="me-3 mt-1 text-danger">
                        <i class="fas fa-warehouse fa-lg"></i>
                    </div>
                    <div>
                        <label class="small text-muted mb-0">Kode Lokasi / Rak</label>
                        <div class="fs-5 fw-bold text-dark"><%= warkah.lokasi_penyimpanan || 'Belum Ditentukan' %></div>
                    </div>
                </div>
                
                <div class="row g-2 small">
                    <div class="col-6">
                        <div class="bg-white p-2 rounded border">
                            <span class="text-muted d-block" style="font-size:0.75rem">No. Boks</span>
                            <span class="fw-bold text-dark"><%= warkah.no_boks_definitif || '-' %></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="bg-white p-2 rounded border">
                            <span class="text-muted d-block" style="font-size:0.75rem">No. Folder</span>
                            <span class="fw-bold text-dark"><%= warkah.nomor_folder != null ? warkah.nomor_folder : '-' %></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <label class="small text-muted mb-1 d-block">Metode Perlindungan</label>
                <% if(warkah.metode_perlindungan === 'Vaulting') { %>
                    <span class="badge bg-dark"><i class="fas fa-dungeon me-1"></i> Vaulting</span>
                <% } else if(warkah.metode_perlindungan === 'Cloud') { %>
                    <span class="badge bg-info"><i class="fas fa-cloud me-1"></i> Cloud</span>
                <% } else { %>
                    <span class="badge bg-secondary"><i class="fas fa-shield-alt me-1"></i> <%= warkah.metode_perlindungan || 'Standar' %></span>
                <% } %>
            </div>

            <% if(warkah.keterangan) { %>
                <div class="alert alert-warning border-0 shadow-sm mb-0">
                    <label class="small text-muted fw-bold d-flex align-items-center mb-1">
                        <i class="fas fa-sticky-note me-2"></i> Catatan Tambahan:
                    </label>
                    <p class="mb-0 small text-dark" style="white-space: pre-wrap;"><%= warkah.keterangan %></p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/detail_template.ejs', { 
    title: 'Detail Warkah',
    parentName: 'Daftar Warkah',
    parentUrl: '/warkah',
    
    // Data Utama
    dataId: warkah.id_warkah,
    
    // Badge Pojok Kanan Atas (Identitas Utama Warkah)
    mainIdentifierLabel: 'Nomor DI-208',
    mainIdentifier: warkah.nomor_di_208 || '-',
    
    // Actions Links
    editUrl: '/warkah/edit/' + warkah.id_warkah,
    deleteUrl: '/warkah/delete/' + warkah.id_warkah,
    
    icon: 'fas fa-file-archive', 
    contentId: 'detail-content-warkah' 
}) %>